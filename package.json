{
  "name": "term-project-sosgames",
  "version": "1.0.0",
  "description": "term-project-sosgames created by GitHub Classroom",
  "main": "app.js",
  "dependencies": {
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "dotenv": "^5.0.1",
    "ejs": "~2.5.7",
    "express": "~4.15.5",
    "express-ejs-layouts": "^2.3.1",
    "express-layout": "^0.1.0",
    "morgan": "~1.9.0",
    "npm": "^5.7.1",
    "octicons": "^7.1.0",
    "pg-promise": "^8.2.2",
    "sequelize": "^4.36.1",
    "sequelize-cli": "^4.0.0",
    "serve-favicon": "~2.4.5"
  },
  "devDependencies": {
    "nodemon": "^1.17.2"
  },
  "scripts": {
    "start:dev": "NODE_ENV=development DEBUG=APP_NAME:* nodemon ./bin/www",
    "start": "NODE_ENV=production nodemon ./bin/www",
    "test": "echo \"Error: no test specified\" && exit 1",

    "db:create:model:deck": "sequelize model:create --name Deck --attributes description:string,color:string,point_value:integer,image:string",
    "db:create:model:user": "sequelize model:create --name User --attributes username:string,password:string,profile_picture:blob,total_score:integer,email:string",
    "db:create:model:gameSession": "sequelize model:create --name GameSession --attributes user_id:integer,number_of_players:integer,round_number:integer,winner:string",
    "db:create:model:userGameSession": "sequelize model:create --name UserGameSession --attributes user_id:integer,game_session_id:integer,current_score:integer",
    "db:create:model:userInGame": "sequelize model:create --name UserInGame --attributes user_id:integer,game_session_id:integer,user_game_session_id:integer",
    "db:create:model:cardStatus": "sequelize model:create --name CardStatus --attributes user_id:integer,game_session_id:integer,card_id:integer,in_hand:boolean,in_deck:boolean,in_discard:boolean",
    
    "db:create:migration": "sequelize migration:generate --name",
    "db:migrate": "sequelize db:migrate",
    "db:rollback": "sequelize db:migrate:undo",
    "postinstall": "sequelize db:migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sfsu-csc-667-spring-2018/term-project-sosgames.git"
  },
